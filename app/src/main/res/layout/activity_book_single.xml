<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_book_single"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ibrahim.unibook.BookSingleActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/add_btn"
        android:layout_alignParentTop="true"
        android:id="@+id/singleBookImage"
        android:background="#00ffffff"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_outline"
        android:layout_below="@+id/singleBookImage"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/titleField"
        android:hint="Book Title"
        android:singleLine="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_outline"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/titleField"
        android:padding="15dp"
        android:id="@+id/descField"
        android:layout_alignParentStart="true"
        android:hint="Book Description" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_outline"
        android:padding="15dp"
        android:ems="10"
        android:id="@+id/priceField"
        android:hint="Price"
        android:singleLine="true"
        android:layout_below="@+id/descField"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/priceField"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="15dp"
        android:textColor="@color/cardview_light_background"
        android:id="@+id/chatBtn" />

    <Button
        android:text="Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignBottom="@+id/chatBtn"
        android:layout_alignEnd="@+id/priceField"
        android:background="@color/colorPrimary"
        android:layout_marginEnd="15dp"
        android:textColor="@color/cardview_light_background"
        android:id="@+id/mapBtn" />
</RelativeLayout>
